<div class="page-header">
  <h1>Search</h1>
</div>
<div class="row">
  <div class="col-md-6">
  <%= form_tag("/searches", method: "post", remote: true) do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag "Search", remote: true%>
  <% end %>
  </div>
</div>
<%= render 'search_results' %>
<div class="page-header">
  <h1>Search</h1>
</div>
<div class="row">
  <div class="col-md-6">
  <%= form_tag("/search", method: "get", class:"form-horizontal") do |q| %>
    <div class="form-group">
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag(:q, "", class: "form-control") %>      
    </div>
    <div class="form-group">
      <%= submit_tag("Search", class: "btn btn-default") %>      
    </div>
  <% end %>
  </div>
</div>